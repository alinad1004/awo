
@{
    ViewBag.Title = "EmployeeHome";
}

<h2>Employee Home</h2>

@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Manager") || User.IsInRole("Employee"))
    {
        <h5>All Employee Actions</h5>
        <div>
            @Html.ActionLink("Register Customer", "RegisterCustomer", "Accounts", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Make a Customer Transaction", "EmployeeCreate", "Transactions", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Edit User Profiles", "ChangeUserProfile", "Accounts", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Reset User Password", "ResetPassword", "Accounts", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Approve Movie Reviews", "Index", "MovieReviews", null, new { @class = "btn btn-default" })
        </div>
        <br />
        <br />



    }

    if (User.IsInRole("Manager"))
    {
        <h5>Manager Only Actions</h5>

        <div>
            @Html.ActionLink("Register Employee", "RegisterEmployee", "Accounts", null, new { @class = "btn btn-default" })
        </div>

        <div>
            @Html.ActionLink("Change Employee Status", "ChangeEmployeeStatus", "Accounts", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("View All Roles", "Index", "RoleAdmin", null, new { @class = "btn btn-default" })
        </div>
        <br />
        <h5>Movie Actions</h5>
        <div>
            @Html.ActionLink("Schedule a movie", "Index", "Schedules", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Add a movie", "Create", "Movies", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Add a genre", "Index", "Genres", null, new { @class = "btn btn-default" })
        </div>
        <br/>
        <h5>Run a Report</h5>
        <div>
            @Html.ActionLink("Report Total Seats/Revenue", "GenerateReport", "Reports", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Report By Customer", "GenerateCustomerReport", "Reports", null, new { @class = "btn btn-default" })
        </div>
        <div>
            @Html.ActionLink("Show PopcornPoint Transactions", "DisplayPopcornReport", "Reports", null, new { @class = "btn btn-default" })
        </div>


    }
}
