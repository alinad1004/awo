@model IEnumerable<AWO_Team14.Models.Discount>

@{
    ViewBag.Title = "All Discounts";
}

<h2>All Discounts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DiscountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DiscountID })
        </td>
    </tr>
}

</table>
