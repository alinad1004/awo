
@{
    ViewBag.Title = "Showdate Search";
}

<h2>Find a movie playing on:</h2>

@using (Html.BeginForm("DisplayShowdateSearch", "Home", FormMethod.Get))
{
    <p class="form-group">
        Show Date: <input type="date" name="ShowDate" class="form-control" />
    </p>
    <p class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}


