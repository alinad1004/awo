@model AWO_Team14.Models.Schedule
@using AWO_Team14.Models
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Published)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Published)
        </dd>

    </dl>
    <table class="table table-sm table-striped">
        <tr>
            <th>Show Date</th>
            <th>Start Hour</th>
            <th>Start Minute</th>
            <th>Title</th>
            <th>Theater</th>
        </tr>
        @foreach (Showing showing in Model.Showings)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => showing.ShowDate)</td>
            <td>@Html.DisplayFor(modelItem => showing.StartHour)</td>
            <td>@Html.DisplayFor(modelItem => showing.StartMinute)</td>
            <td>@Html.DisplayFor(modelItem => showing.Movie.Title)</td>
            <td>@Html.DisplayFor(modelItem => showing.Theater)</td>
            <td>@Html.ActionLink("Edit", "Edit", "Showings", new { id = showing.ShowingID }, null) |
            @Html.ActionLink("Delete", "Delete", "Showings", new { id = showing.ShowingID }, null)</td>
        </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Create Showing", "Create", "Showings", new { ScheduleID = Model.ScheduleID }, null) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.ScheduleID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
