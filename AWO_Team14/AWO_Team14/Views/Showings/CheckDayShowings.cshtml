@model AWO_Team14.Models.Showing

@{
    ViewBag.Title = "CheckDayShowings";
}

<h2>CheckDayShowings</h2>

@using (Html.BeginForm("CheckDayShowings", "Showings", FormMethod.Get))
{
    <p class="form-group">
        Pick Day to Check: <input type="date" name="ShowDate" class="form-control" />
    </p>
    <p class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}
