@model AWO_Team14.Models.Transaction
@using AWO_Team14.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Payment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>

    </dl>
</div>

<table class="table table-sm table-striped">
    <tr>
        <th>Transaction Details</th>
    </tr>
    <tr>
        <th>Movie</th>
        <th>Showdate</th>
        <th>Showtime</th>
        <th>Price</th>
        <th>Status</th>
    </tr>
    @foreach (UserTicket t in Model.UserTickets)
    {
    <tr>
        <td>@Html.DisplayFor(model => t.Showing.Movie.Title)</td>
        <td>@Html.DisplayFor(model => t.Showing.ShowDate.Date)</td>
        <td>@Html.DisplayFor(model => t.Showing.ShowDate.TimeOfDay)</td>
        <td>@Html.DisplayFor(model => t.CurrentPrice)</td>
        <td>@Html.DisplayFor(model => t.Current)</td>

    </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.TransactionID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
