@model AWO_Team14.Models.Transaction
@using AWO_Team14.Models

@{
    ViewBag.Title = "Transaction Details";
}

<h2>Current Transaction</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TransactionID)
        </dt>
        <dt>
            @Html.DisplayFor(model => model.TransactionID)
        </dt>
        <br/>
        <dt>
            Customer Name
        </dt>
        <dt>
            @Html.DisplayFor(model => model.User.FirstName)
            @Html.DisplayFor(model => model.User.LastName)
        </dt>
        <br/>
        <dt>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>

    </dl>
</div>

<table class="table table-sm table-striped">
    <tr>
        <th>Transaction Details</th>
    </tr>
    <tr>
        <th>TicketID</th>
        <th>Movie</th>
        <th>Showdate</th>
        <th>Showtime</th>
        <th>Price</th>
        <th>Status</th>
        <th>Seat</th>
    </tr>
    @foreach (UserTicket t in Model.UserTickets)
    {
    <tr>
        <td>@Html.DisplayFor(model => t.UserTicketID)</td>
        <td>@Html.DisplayFor(model => t.Showing.Movie.Title)</td>
        <td>@Html.DisplayFor(model => t.Showing.ShowDate.Date)</td>
        <td>@Html.DisplayFor(model => t.Showing.ShowDate.TimeOfDay)</td>
        <td>@Html.DisplayFor(model => t.CurrentPrice)</td>
        <td>@Html.DisplayFor(model => t.Status)</td>
        <td>@Html.DisplayFor(model => t.SeatNumber) </td>

    </tr>
    }
</table>

<table class="table table-sm table-bordered" style="width:30%">
    <tr>
        <th colspan="2" style="text-align:center">Order Summary</th>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.Subtotal)</td>
        <td>@Html.DisplayFor(model => model.Subtotal)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.SalesTax)</td>
        <td>@Html.DisplayFor(model => model.SalesTax)</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => model.Total)</td>
        <td>@Html.DisplayFor(model => model.Total)</td>
    </tr>

</table>

<p>
    @Html.ActionLink("Add new ticket", "ChooseMovie", "Transactions", new { id = Model.TransactionID }, null) |
    @Html.ActionLink("Change Seats/Remove Tickets", "RemoveFromTransaction", "Transactions", new { id = Model.TransactionID }, null) |
    @Html.ActionLink("Checkout", "SubmitTransaction", new { id = Model.TransactionID })
</p>
